<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ScrollView01"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@drawable/bg18"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="78dp"
            android:orientation="horizontal"
            >
<ImageView
    android:layout_width="70dp"
    android:layout_height="80dp"
    android:src="@drawable/astrovisionicon"
            />
            <TextView
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:text="AstroVision"
                android:textSize="41dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="About me"
                android:layout_marginLeft="60dp"
                android:background="#D35400"
                android:textColor="#ECF0"
                android:onClick="aboutme"
                />


            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="CONTACT ME"
                android:background="#D35400"
                android:layout_marginLeft="15dp"
                android:textColor="#ECF0"
                android:onClick="contactme"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="User ID"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/edt_id"
                android:textAlignment="center"
                android:background="#FAD7A0"
                android:textColorHint="#A569BD"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:background="#FAD7A0"
                android:textColorHint="#A569BD"
                android:textStyle="bold"
                android:id="@+id/edt_password"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="#FAD7A0"
                android:textColorHint="#A569BD"
                android:id="@+id/edt_name"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Mobile"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="#FAD7A0"
                android:textStyle="bold"
                android:inputType="number"
                android:textColorHint="#A569BD"
                android:id="@+id/edt_mobile"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.15"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            >

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:hint="dd"
                android:inputType="date"
                android:textAlignment="center"
                android:id="@+id/edt_dd"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="#FAD7A0"
                android:textColorHint="#A569BD"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:hint="mm"
                android:textAlignment="center"
                android:textSize="20dp"
                android:inputType="date"
                android:textStyle="bold"
                android:id="@+id/edt_mm"
                android:background="#FAD7A0"
                android:textColorHint="#A569BD"
                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:hint="yyyy"
                android:textAlignment="center"
                android:id="@+id/edt_yyyy"
                android:background="#FAD7A0"
                android:inputType="date"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColorHint="#A569BD"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            >

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Save"
                android:textStyle="bold"
                android:id="@+id/btn_save"
                android:background="#FAD7A0"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:textColorHint="#A569BD"
                android:onClick="save"

                />


            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="Login"
                android:id="@+id/btn_login"
                android:onClick="login"
                android:background="#FAD7A0"
                android:textSize="20dp"
                android:textColorHint="#A569BD"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>